/* pages/home/index.wxss */
/* 导航栏 */
page{
  height: 100%;
}
.topNav {
  display: flex;
  background-color: rgb(23, 24, 26);
  color:rgb(171, 172, 177);
  font-size: 14px;
}

.topNav .item {
  flex: 1;
  text-align: center;
  padding: 5px 0;
}
.topNav .item.active {
  border-bottom:3px solid rgb(178, 44, 43) 
}
/* 页面主要内容区域 */
.mainBody{
  flex: 1;
  overflow: hidden;
}
.mainBody .logo image{
  width: 100%;
  height: 155px;
  display: block;
}
.mainBody .poster{
  display: flex;
  background-color: rgb(17, 18, 20);
  color:rgb(153, 155, 165);
  font-size: 12px;
  height: 115px;
}
.poster .item {
  flex:1;
  margin-top:20px;
}
.poster .item image {
  width: 58px;
  height: 58px;
  display: block;
  margin: 0 auto;
}
.poster .item .poster_info{
  text-align: center;
}
.list{
  background-color: rgb(17, 18, 20);
  padding: 0 5px;
}
.list .title {
  color: rgb(135, 137, 145);
  font-size: 14px;
  height: 38px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.list .title image {
  width:14px;
  height:17px;
  margin-right: 5px;
}
.list .title .title_left{
  flex: 1;
}
.list .list_body {
  /* display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  color: #eee;
  font-size: 12px; */
}
.list .list_body .item{
  /* width: 128px; */
  display: flex;

}
.list .list_body .item image {
  width: 100px;
  height: 100px;
}
.list .list_body .item .text{
  flex:1;
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  padding: 15px;
  font-size: 12px;
  box-sizing: border-box;
  overflow: hidden;
  height: 100px;
  color:#eee;
  background-color: rgb(51,51,51);
}
.list .list_body .item .text .songName{
  margin-bottom: 10px;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.list .list_body .item .text .songName:last-child{
  margin-bottom: 0px;
}
/* 页脚区域 */
.footer{
  height: 50px;
  display: flex;
  background-color: rgb(23, 24, 26);
}
.footer image{
  width: 40px;
  height: 40px;
  margin: 5px 0;
}
/* 去除图片底部白边 */
.logo_left,.logo_right{
  font-size: 0;
}
.footer .logo_left image{
  border-radius: 50%;
}
.info{
  flex: 1;
  color: #888;
  font-size: 14px;
  margin: 5px;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.info .music_title{
  display: block;
  font-size: 16px;
  color: #ccc;
}
.logo_right{
  width: 130px;
}